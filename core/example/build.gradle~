apply plugin: 'java'
apply plugin: 'eclipse'

project.ext {
  coreVersion = '0.0.1-SNAPSHOT'
  coreName = 'core' 
}

repositories {
    flatDir {
        dirs 'lib', 'docs'
    }
}

dependencies {
   compile fileTree(dir: 'lib', includes: ['*.jar'], excludes: ["${coreName}-${coreVersion}.jar"])
   compile name: "${coreName}", version: "${coreVersion}" 
}
